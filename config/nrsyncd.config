config nrsyncd 'global'
	option enabled '1'
	option update_interval '60'
	option jitter_max '10'
	option debug '0'

	# Optional: skip specific interfaces (one line per iface):
	# list skip_iface 'wlan0'
	# list skip_iface 'wlan1-1'

	# Optional general tunables (do NOT require extended mode; uncomment to override defaults):
	# option umdns_refresh_interval '30'   # min seconds between umdns refresh calls
	# option umdns_settle_delay '0'        # seconds to sleep after umdns refresh
	# option quick_max_ms '2000'           # readiness first-pass max (ms)
	# option second_pass_ms '800'          # readiness delay before second-pass (ms)

	# Extended / experimental features (overlay a=/i=, sidechannel) are disabled by default.
	# To opt in, set:
	#   option extended '1'
	# Then you may set (only if needed):
	#   option activity_overlay '1'         # enable overlay TXT placeholders (v=2; a=<none>/i=<none>)
	#   option sidechannel_enable '1'       # enable tiny peer sidechannel (advertised via sc=)
	#   option sidechannel_port '32026'
	#   option sidechannel_proto 'udp'      # 'udp' or 'tcp'
	#   option sidechannel_psk ''           # optional PSK filter (not encryption)
	#   option sidechannel_bind ''          # optional bind address (if nc supports -s)
	#   # Optional proactive broadcast helper (heartbeats/status via sc=)
	#   option sidechannel_broadcast_enable '0'
	#   option sidechannel_broadcast_interval '60'
	#   option sidechannel_broadcast_jitter '10'
